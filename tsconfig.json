{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist/",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ],
    "plugins": [
        {
            "name": "typescript-tslint-plugin",
            "configFile": "./tslint.json"
        }
    ]
}
